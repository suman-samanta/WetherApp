<!DOCTYPE html>
<html lang="en">
  <head>
   {{>header}}
  </head>
  <body>
    <!-- nav part -->
    {{>navbar}}
     <!-- Body part -->
    <div class="container-fluid main_header custom-body">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <!-- Left Side Div -->
          <div class=" col-md-6 col-12 main_header_left float-left">  
            <p> welcome to Weather app</p>
            <h1> Get The Latest <span class="text_clr"> Weather</span> Info of Your City</h1>
            <a href="/weather" ><button>Check Now</button></a>
          </div>
          <!-- Right Side div -->
          <div class=" col-md-6 col-12 main_header_right float-right "  style="padding-left: 8rem;">  
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img class="w-100 custom-carousel-img" src="images/bg1.svg" alt="First slide">
                </div>
                <div class="carousel-item">
                  <img class=" w-100 custom-carousel-img" src="images/bg2.svg" alt="Second slide">
                </div>
                <div class="carousel-item">
                  <img class="w-100 custom-carousel-img" src="images/bg3.svg" alt="Third slide">
                </div>
                <div class="carousel-item">
                  <img class="w-100 custom-carousel-img" src="images/bg4.svg" alt="Fourth slide">
                </div>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div> 
        </div>
      </div>
    </div>    
  </body>


  <!-- Footer part -->
  {{>footer}}
</html>
